    "import pandas as pd\n",
    "from pathlib import Path\n",
    "\n",
    "raw_dir = Path(\"../data/raw\")\n",
    "texts = {}\n",
    "for file in raw_dir.glob(\"*.txt\"):\n",
    "    texts[file.stem] = file.read_text(encoding=\"utf-8\")\n",
    "\n",
    "df = pd.DataFrame(list(texts.items()), columns=[\"Character\", \"Text\"])\n",
    "df"
   ]
